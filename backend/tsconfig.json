{
  "exclude": [
    "**/*.spec.ts",
    "./vitest.config.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "@App": [
        "src/App/index.ts"
      ],
      "@App/*": [
        "src/App/*"
      ],
      "@Shared/domain": [
        "src/Components/Shared/domain/index.ts"
      ],
      "@Shared/infrastructure": [
        "src/Components/Shared/infrastructure/index.ts"
      ],
      "@Metrics/Shared/domain": [
        "src/Components/Metrics/Shared/domain/index.ts"
      ],
      "@Metrics/Shared/infrastructure": [
        "src/Components/Metrics/Shared/infrastructure/index.ts"
      ],
      "@Metrics/Aggregates/domain": [
        "src/Components/Metrics/Aggregates/domain/index.ts"
      ],
      "@Metrics/Aggregates/application": [
        "src/Components/Metrics/Aggregates/application/index.ts"
      ],
      "@Metrics/Aggregates/infrastructure": [
        "src/Components/Metrics/Aggregates/infrastructure/index.ts"
      ],
      "@Metrics/TimeSeries/domain": [
        "src/Components/Metrics/TimeSeries/domain/index.ts"
      ],
      "@Metrics/TimeSeries/application": [
        "src/Components/Metrics/TimeSeries/application/index.ts"
      ],
      "@Metrics/TimeSeries/infrastructure": [
        "src/Components/Metrics/TimeSeries/infrastructure/index.ts"
      ],
      "@Metrics/Rankings/domain": [
        "src/Components/Metrics/Rankings/domain/index.ts"
      ],
      "@Metrics/Rankings/application": [
        "src/Components/Metrics/Rankings/application/index.ts"
      ],
      "@Metrics/Rankings/infrastructure": [
        "src/Components/Metrics/Rankings/infrastructure/index.ts"
      ]
    },
    "lib": [
      "es2022"
    ],
    "types": [
      "@types/node",
      "vitest/globals"
    ]
  }
}
